{
  "version": 2,
  "builds": [
    {
      "src": "Backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/frontend/dist/$1",
      "methods": ["GET", "HEAD"]
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/frontend/dist/index.html"
    }
  ]
}
