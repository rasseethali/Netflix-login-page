{
  "version": 2,
  "builds": [
    {
      "src": "Backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Frontend/frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/login",
      "dest": "Backend/index.js"
    },
    {
      "src": "/api/.*",
      "dest": "Backend/index.js"
    },
    {
      "src": "/.*\\.",
      "dest": "Frontend/frontend/dist/$0"
    },
    {
      "src": "/.*",
      "dest": "Frontend/frontend/dist/index.html"
    }
  ]
}
